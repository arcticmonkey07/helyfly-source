.description
  display: flex
  margin-bottom: 22px
  padding-top: 70px

.description__container
  position: relative
  display: flex
  flex-direction: column
  padding-bottom: 24px
  &:after
    content: ''
    position: absolute
    bottom: 6px
    left: 0
    width: 569px
    border: 1px solid #C7C7C7

.description__header
  width: 260px
  margin-top: 0
  margin-bottom: 10px
  font-weight: 500
  font-size: 46px
  line-height: 48px
  color: #37373F

.description__text
  width: 500px;
  margin: 0
  margin-bottom: 10px
  font-size: 20px;
  font-weight: normal
  line-height: 26px
  color: #37373F
  letter-spacing: 0.2px

.description__feature-list
  margin: 0
  padding: 0
  list-style none
  &:after
    content: ''
    position: absolute
    bottom: 93px
    left: 0
    width: 569px
    border: 0.5px solid #C7C7C7

.description__feature
  position: relative
  display: flex
  align-items: center
  height: 52px
  padding-left: 50px
  font-weight: 500
  font-size: 15px
  line-height: 20px
  color: #37373F

.description__feature-record
  &:before
    content: ''
    position: absolute
    top: 8px
    left: 0
    width: 34px
    height: 34px
    background-image: url(./../../img/record.svg)
    background-repeat: no-repeat

.description__feature-photos
  padding-left: 43px
  &:before
    content: ''
    position: absolute
    top: 9px
    left: 0
    width: 34px
    height: 34px
    background-image: url(./../../img/photos.svg)
    background-repeat: no-repeat

.description__feature-city
  height: 41px
  padding-left: 43px
  &:before
    content: ''
    position: absolute
    top: 1px
    left: 0
    width: 34px
    height: 34px
    background-image: url(./../../img/city.svg)
    background-repeat: no-repeat

.description__feature-answers
  margin-bottom: 21px
  padding-left: 42px
  letter-spacing: 0.5px
  &:before
    content: ''
    position: absolute
    top: 9px
    left: 0
    width: 34px
    height: 34px
    background-image: url(./../../img/answers.svg)
    background-repeat: no-repeat

.description__feature-reviews-container
  display: flex

.description__feature-reviews
  padding-top: 18px
  padding-left: 43px
  font-size: 20px
  line-height: 26px
  &:after
    content: ''
    position: absolute
    top: 22px
    left: 0
    width: 34px
    height: 37px
    background-image: url(./../../img/reviews.svg)
    background-repeat: no-repeat
  &--bold
    padding: 0 5px
    font-weight: bold

.description__feature-stars-container
  margin-top: 35px
  margin-left: 16px

.description__photo
  position: relative
  margin-left: auto
  &:after
    content: ''
    position: absolute
    bottom: 30px
    right: 26px
    border-top: 13px solid transparent
    border-left: 15px solid #ffffff
    border-right: 15px solid transparent
    border-bottom 12px solid transparent

.description__photo-img
  width: 554px
  height: 374px
  background-image: url(./../../img/description-photo.png)