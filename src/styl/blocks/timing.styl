.timing
  margin-bottom: 82px

.timing__header
  margin-bottom: 26px
  font-weight: 500
  font-size: 23px
  line-height: 29px

.timing__container
  width: 770px
  height: 458px
  border: 1px solid #C7C7C7
  box-sizing: border-box

.timing__date-container
  height: 72px
  border-bottom: 0.5px solid #C7C7C7

.timing__date
  position: relative
  display: inline-block
  margin: 0
  margin-top: 26px
  margin-right: 16px
  margin-left: 29px
  font-weight: normal
  font-size: 20px
  line-height: 26px

.timing__date-button
  position: relative
  top: 8px
  display: inline-block
  width: 35px
  height: 35px
  border: 0.5px solid #C4C4C4
  box-sizing: border-box
  border-radius: 3px
  background-color: transparent
  cursor: pointer
  &:before
    content: ''
    position: absolute
    top: 8px
    left: 8px
    width: 18px
    height: 18px
    background-image: url(./../../img/calendar.svg)
    background-repeat: no-repeat
  &:hover
    background-color: #dbdbdb

.timing__info-container
  display: flex
  height: 111px
  padding-top: 18px
  padding-left: 28px
  padding-right: 30px
  border-bottom: 0.5px solid #C7C7C7

.timing__info-container
  &:last-of-type
    border-bottom: none

.timing__time
  display: block
  margin-bottom: 10px
  font-weight: normal
  font-size: 18px
  line-height: 26px

.timing__price
  display: block
  margin-bottom: 9px
  font-weight: 600
  font-size: 18px
  line-height: 22px

.timing__text
  display: block
  font-weight: normal;
  font-size: 20px
  line-height: 26px

.timing__info-button
  margin-top: 22px
  margin-left: auto
  width: 129px
  height: 50px
  font-weight: 500
  font-size: 16px
  line-height: 17px
  color: #FC9B09
  background-color: transparent
  border: 2px solid #FC9B09
  box-sizing: border-box
  border-radius: 3px
  cursor: pointer
  &:hover
    background-color: #FC9B09;
    color: #ffffff;

.timing__info-reviews
  margin-top: 19px
  margin-left: 28px

.timing__stars-container
  margin-top: 35px
  margin-left: 16px